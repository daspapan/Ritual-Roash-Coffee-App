generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TodoStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  BLOCKED
}

enum TodoPriority {
  HIGH
  MEDIUM
  LOW
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
}

model todo {
  id Int @id @default(autoincrement())
  title String
  description String?
  start_date DateTime?
  due_date DateTime?
  status TodoStatus @default(TODO)
  priority TodoPriority @default(LOW)
  assignee String @default("self")
  remark String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
